<div class="book row">

  <div class="col-md-4">
    <%= link_to image_tag(book.cover.url(:medium)), book %>
  </div>

  <div class="col-md-6">
    <h2><%= link_to book.title, book %></h2>
    <small><%= l(book.date_read, format: "%B %Y") %></small><br>
    <small><%= book.rating %> / 10</small>
    <div class="abstract"><%= book.abstract %></div>
  </div>

</div>