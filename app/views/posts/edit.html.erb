<%= provide(:title, "Edit post") %>

<%= form_for @post, url: {action: "update"} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "60x12" %>
  </p>
  <p>
    <%= f.submit "Verzend" %>
  </p>
<% end %>