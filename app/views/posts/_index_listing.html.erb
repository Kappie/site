  <article class="post-index-listing">
    <h1><%= link_to post.title, post %></h1>
    <small>
      <%= l(post.created_at, format: "%-d %B, %Y") %>  
    </small>
    <div>
      <%= post.body.html_safe.truncate(300, :separator => " ",
        :omission => " [...]") %>
    </div>
    <small>
      <%= link_to(pluralize(post.comments.size, "reactie", "reacties"), post_path(post, :anchor => "comments")) %>
    </small>
  </article>